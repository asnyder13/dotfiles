if command -v bat >/dev/null 2>&1; then
	alias cats='bat'
elif command -v batcat >/dev/null 2>&1; then
	alias cats='batcat'
elif command -v highlight >/dev/null 2>&1; then
	alias cats='highlight -O ansi --force --line-numbers'
else
	alias cats='cat'
fi

# Random functions
function mkcd () {
	mkdir -p "$1"
	cd "$1" || return 1
	return 0
}
function cdmk () {
	mkcd "$1"
}

function vimhelp () {
	vim -c "help $1 | only"
}
function vimman () {
	vim -c "Man $1 | only"
}
alias vimh='vimhelp'
alias vimm='vimman'
alias manv='vimman'

function toyaml () {
	if ! command -v ruby >/dev/null 2>&1; then
		echo 'You need Ruby to run this function.'
		return 1
	fi

	if [[ $# -gt 0 ]]; then
		if [[ ! -f $1 ]]; then
			echo 'That file does not exist to parse.'
			return 1
		else
			ruby -ryaml -rjson -e "puts YAML.dump(JSON.parse(File.read(\"$1\")))"
		fi
	else
		ruby -ryaml -rjson -e 'puts YAML.dump(JSON.parse($<.read))'
	fi
}

function tojson () {
	if ! command -v ruby >/dev/null 2>&1; then
		echo 'You need Ruby to run this function.'
		return 1
	fi

	if [[ $# -gt 0 ]]; then
		if [[ ! -f $1 ]]; then
			echo 'That file does not exist to parse.'
			return 1
		else
			ruby -ryaml -rjson -e "puts JSON.pretty_generate(YAML.safe_load(File.read(\"$1\")))"
		fi
	else
		ruby -ryaml -rjson -e 'puts JSON.pretty_generate(YAML.safe_load($<.read))'
	fi
}

# $1: timespan
# $2?: custom message
function timer () {
	sleep "$1"
	print -n '\a'
	if command -v notify-send >/dev/null 2>&1; then
		if [ -z "$2" ]; then notify-send -i terminal "Terminal timer: ${1}"
		else notify-send -i terminal "Terminal timer: ${1}" "$2"
		fi
	fi
	if command -v paplay >/dev/null 2>&1; then
		paplay /usr/share/sounds/freedesktop/stereo/bell.oga
	fi
}
function alert () {
	timer 0s "Alert fired"
}

if grep -q alias <(type rd) >/dev/null 2>&1; then
	unalias rd
fi
rd() {
	eval " $@ & ; disown"
}
re() {
	rd "$@" ; sleep 0.5 ; exit
}

qrencode-utf() {
	qrencode -t ANSIUTF8 "$@"
}

# Use difftastic to view a single ref
# $1 git ref
function gdtref () {
	git difftool "$1~1..$1"
}

function gdtlast () {
	gdtref HEAD
}
